{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop":true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowUnreachableCode":false,
    "allowJs": true,
    "resolveJsonModule": true

  },
  "include": ["src/**/*", "@types/**/*.d.ts"],
  "types": ["node"],
  "exclude": ["node_modules"]
}
